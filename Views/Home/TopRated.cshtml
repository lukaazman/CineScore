@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Top Rated";
}

<div class="text-center mb-4">
    <h1 class="display-4">Top Rated Movies</h1>
    <p class="lead">Movies sorted by user ratings from highest to lowest.</p>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        No movies are available yet. Check back soon!
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var movie in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@(string.IsNullOrWhiteSpace(movie.PosterUrl) ? "https://via.placeholder.com/500x750?text=No+Poster" : movie.PosterUrl)"
                         class="card-img-top"
                         alt="@movie.Title poster">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-2">
                            <h5 class="card-title mb-1">@movie.Title</h5>
                            <p class="card-subtitle text-muted">@movie.Year &middot; @movie.Genre</p>
                        </div>
                        <p class="card-text text-muted flex-grow-1">@movie.Description</p>
                        <a asp-controller="Movies"
                           asp-action="Details_user"
                           asp-route-id="@movie.Id"
                           class="btn btn-primary mt-auto">
                            View details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}