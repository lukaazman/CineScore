@model PagedMoviesResult

<div class="text-center mb-4">
    <h1 class="display-4">@ViewData["Heading"]</h1>
    <p class="lead">@ViewData["Lead"]</p>
</div>

@if (!Model.Movies.Any())
{
    <div class="alert alert-info" role="alert">
        No movies are available yet. Check back soon!
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var movie in Model.Movies)
        {
            @await Html.PartialAsync("_MovieCard", movie)
        }
    </div>
    <nav aria-label="Top rated movie pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : string.Empty)">
                <a class="page-link" asp-action="TopRated" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>

            @for (var p = 1; p <= Model.TotalPages; p++)
            {
                <li class="page-item @(p == Model.CurrentPage ? "active" : string.Empty)">
                    <a class="page-link" asp-action="TopRated" asp-route-page="@p">@p</a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : string.Empty)">
                <a class="page-link" asp-action="TopRated" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}
