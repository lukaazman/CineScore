@model PagedMoviesResult

<div class="text-center mb-4">
    <h1 class="display-4">@ViewData["Heading"]</h1>
    <p class="lead">@ViewData["Lead"]</p>
</div>

@if (!Model.Movies.Any())
{
    <div class="alert alert-info" role="alert">
        No movies are available yet. Check back soon!
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var movie in Model.Movies)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@(string.IsNullOrWhiteSpace(movie.PosterUrl) ? "https://via.placeholder.com/500x750?text=No+Poster" : movie.PosterUrl)"
                         class="card-img-top"
                         alt="@movie.Title poster">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-2">
                            <h5 class="card-title mb-1">@movie.Title</h5>
                            <p class="card-subtitle text-muted">@movie.Year &middot; @movie.Genre</p>
                        </div>
                        <div class="flex-grow-1"></div>
                        <a asp-controller="Movies"
                           asp-action="Details_user"
                           asp-route-id="@movie.Id"
                           class="btn btn-primary mt-auto">
                            View details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    <nav aria-label="Top rated movie pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : string.Empty)">
                <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>

            @for (var p = 1; p <= Model.TotalPages; p++)
            {
                <li class="page-item @(p == Model.CurrentPage ? "active" : string.Empty)">
                    <a class="page-link" asp-route-page="@p">@p</a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : string.Empty)">
                <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}