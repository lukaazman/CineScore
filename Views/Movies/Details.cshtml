@model Movie
@using System.Linq

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="mb-3">
    @{
        var bannerSource = string.IsNullOrWhiteSpace(Model.BannerUrl)
            ? Model.PosterUrl
            : Model.BannerUrl;
    }

    @if (!string.IsNullOrWhiteSpace(bannerSource))
    {
        <img src="@bannerSource"
             class="img-fluid rounded w-100"
             alt="@Model.Title banner"
             onerror="this.onerror=null;this.src='https://via.placeholder.com/1280x720?text=No+Banner';" />
    }
    else
    {
        <img src="https://via.placeholder.com/1280x720?text=No+Banner"
             class="img-fluid rounded w-100"
             alt="No image available"
             onerror="this.onerror=null;this.src='@Url.Content("~/images/placeholder.jpg")';" />
    }
</div>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PosterUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PosterUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BannerUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BannerUrl)
        </dd>
    </dl>
</div>

<div>
    <h4>Reviews</h4>
    <hr />
    @if (Model.Comments != null && Model.Comments.Any())
    {
        foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
        {
            <div class="mb-3 p-3 border rounded bg-light">
                <div class="d-flex justify-content-between">
                    <strong>@(comment.User?.UserName ?? "Unknown user")</strong>
                    <small class="text-muted">@comment.CreatedAt.ToString("MMMM dd, yyyy")</small>
                </div>
                <p class="mb-0">@comment.Text</p>
            </div>
        }
    }
    else
    {
        <p class="text-muted">No reviews yet for this film.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
